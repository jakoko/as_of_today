<div class="row">
	<div class="col-md-8 col-md-offset-1">

		<div class="col-md-8">
			<h2><%= @user.first_name %> <%= @user.last_name %></h2>
			<p>Email: <%= @user.email %></p>
			<p>Location: <%= @user.state %></p>
			<p>Website: <%= @user.personal_website %></p>
			<p>About Me: <%= @user.about_me %></p>
		</div>
		
		<div class="col-md-4">	
			<% if !@user.profile_pic.url.nil? %>
				<%= image_tag @user.profile_pic, class:"img-thumbnail img-responsive"%>
			<% end %>
		</div>
	</div>

	<div class="col-md-2">
			<%= render 'shared/profile' if me? %>
	</div>

</div>

<div class="row">
	<div class="col-md-8 col-md-offset-1">
		<h3><%= link_to "View All My Portfolios", user_portfolios_path(@user) %></h3>
	</div>
</div>