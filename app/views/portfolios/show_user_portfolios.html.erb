<%= render 'shared/user_account_navigation' if logged_in? %>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<h2>
			<u><%= @user.first_name %> <%= @user.last_name %></u>
			<small class="h4"><%= link_to "Profile", user_path(@user) %></small>
		</h2>

		<br>

		<h3>Portfolios</h3>
		<% @portfolios.in_groups_of(4) do |port1, port2, port3, port4| %>
			<div class="row">

				<% if port1 %>
			    <div class="col-md-3 text-center">
			    	<h4><%= link_to port1.title, portfolio_path(@user, port1) %><h4>
			    	<% if !port1.photos.empty? %>
			    	<%= image_tag(port1.photos.first.photo_image.url(:thumb), class: "img-thumbnail img-responsive center-block") %>
			    	<% end %>
			    </div>
			    <% end %>

			    <!-- Portfolio2 -->
		    	<% if port2 %> 
		      	<div class="col-md-3 text-center">
		    		<h4><%= link_to port2.title, portfolio_path(@user, port2) %></h4>
		    		<% if !port2.photos.empty? %>
		    		<%= image_tag(port2.photos.first.photo_image.url(:thumb), class: "img-thumbnail img-responsive center-block") %>
		    		<% end %>
		      	</div>
		      	<% end %>

		      	<!-- Portfolio3 -->
		      	<% if port3 %> 
		      	<div class="col-md-3 text-center">
		    		<h4><%= link_to port3.title, portfolio_path(@user, port3) %></h4>
		    		<% if !port3.photos.empty? %>
		    		<%= image_tag(port3.photos.first.photo_image.url(:thumb), class: "img-thumbnail img-responsive center-block") %>
		    		<% end %>      
		      	</div>
		      	<% end %>

		      	<!-- Portfolio4 -->
		      	<% if port4 %> 
		      	<div class="col-md-3 text-center">
		    		<h4><%= link_to port4.title, portfolio_path(@user, port4) %></h4>
		    		<% if !port4.photos.empty? %>
		    		<%= image_tag(port4.photos.first.photo_image.url(:thumb), class: "img-thumbnail img-responsive center-block") %>
		    		<% end %>      
		      	</div>
		      	<% end %>

		    <!-- closing div class row -->
			</div>
		<% end %>
	<!-- closing div class col -->
	</div>
<!-- closing div class row -->
</div>

