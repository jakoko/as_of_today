<!-- For every 4 photos in the Photo database, display them together in one row -->
<% @photos.in_groups_of(4) do |photo1, photo2, photo3, photo4| %>
	<div class="row">
    	<% if photo1 %> <!-- If photo1 exists, then show image -->
	    <div class="col-md-3"><%= link_to image_tag(photo1.photo_image.url(:normal), class: "img-thumbnail img-responsive center-block"), photo_path(photo1.id) %></div>
	    <% end %>

	    <% if photo2 %>
	      <div class="col-md-3"><%= link_to image_tag(photo2.photo_image.url(:normal), class: "img-thumbnail img-responsive center-block"), photo_path(photo2.id) %></div>
	    <% end %>

	    <% if photo3 %>
	      <div class="col-md-3"><%= link_to image_tag(photo3.photo_image.url(:normal), class: "img-thumbnail img-responsive center-block"), photo_path(photo3.id) %></div>
	    <% end %>

   	    <% if photo4 %>
	      <div class="col-md-3"><%= link_to image_tag(photo4.photo_image.url(:normal), class: "img-thumbnail img-responsive center-block"), photo_path(photo4.id) %></div>
	    <% end %>
	</div>
<% end %>