@import 'bootstrap-sprockets';
@import 'bootstrap';
@import 'font';


$font-base:		"CabinRegular", "Helvetica Neue", Helvetica, Arial, sans-serif;
$font-heading:	"SailRegular", "Helvetica Neue", Helvetica, Arial, sans-serif;

/******************************
* Overide Bootstrap Font Family
*******************************/
h1, h2, h3, h4, h5, h6 {
    font-family: $font-base;
}
p, div {
    font-family: $font-base;
}

/******************************
* Additional Customization
*******************************/
#landing-page-main-container {
	background-image: url('<%= asset_path("landing.jpg")%>');
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	position: relative;

	nav {
		background-color: rgba(0,0,0,0.0);
		border-color: rgba(0,0,0,0.0);

		a {
			// color: rgba(241,169,160,1.0);
			color: black;
		}
	}
}

#tinted-layer {
	height: 100%;
	width: 100%;
	top: 0;
	left: 0;
	// background-color: rgba(255, 255, 255, 0.2);
	position: absolute;
}

#landing-cta {
	padding: 10px;
	margin-top: 8%;
	background-color: rgba(255,255,255,0.8);
	border-radius: 5px;

	h1 {
		margin-top: 0px;
		font-family: $font-heading;
		font-size: 3.5em;
	}
	h4 {
		font-size: 1.5em;
	}
}

.container-fluid {
	padding-bottom: 1%;
}

.navbar {
	margin: 5px 0 0 0;
}

.row {
	margin-top: 15px;
	margin-bottom: 15px;
}

.navbar-default {
	background-color: rgba(236, 240, 241, 1.0);
}

.page-header {
	background-color: rgba(241, 169, 160, 1.0);
	margin: 0 auto 20px 0;
}

 .nav-button-right {
  	float:right;
 	margin: 1% 8px 1% 0;
}

#page-header-h1 {
	font-family: $font-heading;
	font-size: 55px;
	text-align: center;
	margin: 0;
	padding: 20px 0;
}

#show-photo-background {
	background-color: rgba(0,0,0, 0.9);
}

#remove_image_portfolio_row {
	margin-top: 40px;
	margin-bottom: 40px;
}

#home-button {
	font-family: $font-heading;
	font-size: 35px;
}

#user_info {
	h3 {
		display: inline-block;
		margin-left: 1em;
	}
}

#profile_pic_show {
	height: 100px;
	width: 100px;
}

#user_portfolio_profile_pic {
	height: 150px;
	width: auto;
}

#user_portfolios {
	display: inline-block;

	h2, p {
		margin: auto 10px;
	}
}

.form-group {
	label {
		font-size: 1.2em;
	}
}

/******************************
* Justified Gallery
*******************************/
.justified-container {
	footer {
		width: 100%;
		position: absolute; 
		bottom: 0;
		background-color: rgba(0,0,0,0.7);
	}
	footer > p {
		color: white;
		margin: 0.3em auto;
		padding-left: 0.5em;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}
}